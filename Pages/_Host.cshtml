@page "/"
@namespace blazorWords.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>blazorWords</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
</head>
<body id="blazorBody">
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script>
        window.applyStyleForElement = function(styleOp,styleOp2) {
            document.getElementById(styleOp.id).style[styleOp.attrib] = styleOp.value;
            if(styleOp2!=null)
            {
                document.getElementById(styleOp2.id).style[styleOp2.attrib] = styleOp2.value;
            }
        }

        window.getStyleForElement = function(styleOp) {
            return document.getElementById(styleOp.id).style[styleOp.attrib] =="inline" ? true : false;
        }

        var FocusScript = FocusScript || {};
        FocusScript.setFocus = function (element) {
	    element.focus();
        };
   </script>
</body>
</html>
